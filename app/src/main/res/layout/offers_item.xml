<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="@dimen/material_component_lists_padding_above_list"
    android:padding="@dimen/material_component_lists_two_line_text_size">

    <ImageView
        android:id="@+id/offer_image"
        android:layout_width="@dimen/material_component_text_fields_icon_height"
        android:layout_height="@dimen/material_component_text_fields_icon_height"
        android:paddingLeft="@dimen/material_component_lists_icon_left_padding"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/offer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/color_list_primary_text"
        android:textSize="@dimen/material_component_lists_two_line_text_size"
        android:paddingLeft="@dimen/material_component_lists_text_left_padding"
        android:paddingRight="@dimen/material_component_lists_right_padding"/>

    <TextView
        android:id="@+id/offer_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offer_name"
        android:textColor="@color/color_list_secondary_text"
        android:textSize="@dimen/material_component_lists_two_line_secondary_text_size"
        android:paddingLeft="@dimen/material_component_lists_text_left_padding"
        android:paddingRight="@dimen/material_component_lists_right_padding"/>

    <TextView
        android:id="@+id/offer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offer_weight"
        android:textColor="@color/color_list_secondary_text"
        android:textSize="@dimen/material_component_lists_two_line_secondary_text_size"
        android:paddingLeft="@dimen/material_component_lists_text_left_padding"
        android:paddingRight="@dimen/material_component_lists_right_padding"/>

</RelativeLayout>
