<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CardView.PrimaryTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/material_component_cards_primary_title_top_padding</item>
        <item name="android:paddingLeft">@dimen/material_component_cards_primary_title_bottom_padding</item>
        <item name="android:paddingRight">@dimen/material_component_cards_primary_title_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/material_component_cards_primary_title_bottom_padding</item>
        <item name="android:textColor">@color/color_list_primary_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CardView.Subtext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/material_component_cards_primary_title_bottom_padding</item>
        <item name="android:paddingRight">@dimen/material_component_cards_primary_title_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/material_component_cards_primary_title_bottom_padding</item>
        <item name="android:textColor">@color/color_list_secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardView.SupportingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/material_component_cards_supporting_text_top_padding</item>
        <item name="android:paddingLeft">@dimen/material_component_cards_primary_title_bottom_padding</item>
        <item name="android:paddingRight">@dimen/material_component_cards_primary_title_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/material_component_cards_supporting_text_bottom_padding</item>
        <item name="android:textColor">@color/color_list_secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
